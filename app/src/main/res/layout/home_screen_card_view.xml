<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/ic_chevron_right"
            android:text="Test"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_list_button_sign_up"
            android:orientation="horizontal"
            android:weightSum="1">

            <!-- A CardView that contains a TextView -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mock_card_view"
                android:layout_width="120dp"
                android:layout_height="220dp"
                android:layout_gravity="left"
                card_view:cardBackgroundColor="@color/card_background_color"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="4dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/mock_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Mock test"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizimage"
                    android:src="@drawable/img"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/online_card_view"
                android:layout_width="120dp"
                android:layout_height="220dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                card_view:cardBackgroundColor="@color/card_background_color"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="4dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/online_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Online test"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>